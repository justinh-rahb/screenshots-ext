{
    "manifest_version": 2,
    "name": "Web Screenshot Extension",
    "version": "1.0",
    "description": "Take screenshots of web pages",
    "permissions": [
      "activeTab",
      "downloads"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }
  